---
layout: base.njk

pagination:
  data: collections.paginatedTopics
  size: 1
  alias: topic

permalink: "/topics/{{ topic.fields.slug }}/{% if topic.pagination.pageNumber %}page-{{ topic.pagination.pageNumber + 1 }}/{% endif %}"

eleventyComputed:
  title: "Topic: {{ topic.fields.title }}"
  desc: TODOOOOO!
  icon: "{{ topic.fields.slug }}"

includesSidebar: true
---

{% import 'macros.njk' as macros %}

<ol class="list-preview">
  {%- for item in topic.pagination.items %}
    <li>
      {{ macros.entryPreview(item)}}
    </li>
  {% endfor -%}
</ol>

{{ macros.collectionPagination(topic.pagination, {type: topic.fields.title + " content"})}}
