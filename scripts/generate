#!/usr/bin/env node

// enforce prod environment for local debugging
// generating with preview data doesn't make much sense anyway
process.env.NODE_ENV = 'production';

const { Nuxt, Builder, Generator } = require('nuxt-edge');
const config = require('../nuxt.config.js');

config.mode = 'universal';
config.dev = false;

const nuxt = new Nuxt(config);
const builder = new Builder(nuxt);
const generator = new Generator(nuxt, builder);
const generateOptions = {
  init: true, // process.env.WEBHOOK_TITLE === 'CLEAR_CUSTOM_CACHE',
  build: true
};

async function generateRoutes() {
  try {
    await generator.generate(generateOptions);
  } catch (e) {
    console.error(e);
    throw e;
  }
}

generateRoutes();
